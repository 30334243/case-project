{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [
        "../linux.json"
    ],
    "configurePresets": [
        {
            "name": "linux-googletest",
            "hidden": true,
            "inherits": [
                "linux"
            ],
            "cacheVariables": {
                "IS_GOOGLETEST": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-googletest-debug",
            "inherits": [
                "linux-googletest",
                "linux-debug"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "GTest_DIR": "${sourceDir}/3rdparty/$env{OS}/GTest-debug/lib/cmake/GTest"
            }
        },
        {
            "name": "linux-googletest-release",
            "inherits": [
                "linux-googletest",
                "linux-release"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "GTest_DIR": "${sourceDir}/3rdparty/$env{OS}/GTest-release/lib/cmake/GTest"
            }
        }
    ]
}