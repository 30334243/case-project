{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux",
            "hidden": true,
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "LINUX_FLAG": "ON"
            },
            "binaryDir": "${sourceDir}/builds/$env{PROJECT_NAME}/$env{OS}/${presetName}"
        },
        {
            "name": "linux-debug",
            "hidden": true,
            "inherits": [
                "linux"
            ],
            "cacheVariables": {
                "fmt_DIR": "${sourceDir}/3rdparty/$env{OS}/fmt-debug/lib/cmake/fmt"
            }
        },
        {
            "name": "linux-release",
            "hidden": true,
            "inherits": [
                "linux"
            ],
            "cacheVariables": {
                "fmt_DIR": "${sourceDir}/3rdparty/$env{OS}/fmt-release/lib/cmake/fmt"
            }
        }
    ]
}