{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [
        "paths.json"
    ],
    "configurePresets": [
        {
            "name": "linux",
            "hidden": true,
            "inherits": [
                "linux-paths"
            ],
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "ASTRA_FLAG": "ON"
            }
        },
        {
            "name": "linux-debug",
            "inherits": [
                "linux"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "GTest_DIR": "$env{HOME}/cxx/$env{PROJECT_NAME}/3rdparty/linux/GTest-debug/lib/cmake/GTest"
            }
        },
        {
            "name": "linux-release",
            "inherits": [
                "linux"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "GTest_DIR": "$env{HOME}/cxx/$env{PROJECT_NAME}/3rdparty/linux/GTest-release/lib/cmake/GTest"
            }
        }
    ]
}