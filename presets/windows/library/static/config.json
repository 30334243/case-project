{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [
        "../config.json"
    ],
    "configurePresets": [
        {
            "name": "windows-library-static",
            "inherits": [
                "windows-library"
            ],
            "cacheVariables": {
                "CMAKE_SHARED_LIBS": "OFF"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ]
}