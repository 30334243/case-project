{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "include": [
        "../config.json",
        "../build.json",
        "../package.json"
    ],
    "workflowPresets": [
        {
            "name": "vs-2019-ci",
            "steps": [
                {
                    "type": "configure",
                    "name": "vs-2019"
                },
                {
                    "type": "build",
                    "name": "vs-2019-debug"
                },
                {
                    "type": "build",
                    "name": "vs-2019-release"
                },
                {
                    "type": "package",
                    "name": "vs-2019-package"
                }
            ]
        }
    ]
}